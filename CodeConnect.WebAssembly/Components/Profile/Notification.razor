@using ApplicationLayer
@using DomainLayer.Entities

@if (Notif != null)
{
    <div class="flex items-center p-4 text-sm rounded-lg rounded-md border-4 @GetNotificationBorderAndBg(Notif.ToastType)" role="alert">
        <span class="@(GetNotificationIcon(Notif.ToastType))"></span>
        <div>
            <p class="font-bold pl-3">@Notif.Message</p> 
        </div>
    </div>
}


@code {
    [Parameter] public ApplicationLayer.Toast? Notif { get; set; }
    
    public string GetNotificationBorderAndBg(ToastType type)
    {
        switch (type)
        {
            case ToastType.Success:
                return "border-green-800 bg-green-400";
            case ToastType.Error:
                return "border-red-800 bg-red-500";
            case ToastType.Warning:
                return "border-amber-800 bg-amber-400";
            case ToastType.Info:
                return "border-blue-800 bg-blue-400 ";
            default:
                return "bg-purple-600";
        }
    }
    public string GetNotificationIcon(ToastType type)
    {
        switch (type)
        {
            case ToastType.Success:
                return "fa-solid fa-circle-check text-green-800";
            case ToastType.Error:
                return "fa-solid fa-circle-exclamation text-red-800";
            case ToastType.Warning:
                return "fa-solid fa-triangle-exclamation text-amber-800";
            case ToastType.Info:
                return "fa-solid fa-circle-exclamation text-blue-800";
            default:
                return "fa-solid fa-circle-exclamation text-amber-400";
        }
    }
}