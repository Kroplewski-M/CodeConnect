@using CodeConnect.WebAssembly.Components.General
@using DomainLayer.Constants
@inherits FollowUserBase

<button @onclick="ToggleFollow" disabled="@DisableFollow" class="dark:text-dark-supportColor text-light-supportColor hover:cursor-pointer bg-red-700 hover:bg-red-600 rounded-md px-5 py-[5px] mt-[10px]">
    <FaIcon Icon="@FaIcons.Heart" /> @(Following? "Following" : "Follow")
</button>

@if (ConfirmUnFollow)
{
    <Confirm Description="@UnFollowText" ConfirmMethod="UnFollow" CancelMethod="CancelUnFollow" ConfirmText="Unfollow" />
}