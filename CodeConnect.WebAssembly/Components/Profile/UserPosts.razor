@using CodeConnect.WebAssembly.Components.Posts
@using CodeConnect.WebAssembly.Components.General
@inherits UserPostsBase

<p class="text-4xl font-bold text-dark-supportColor">Recent Posts</p>

<LazyList Items="Posts" OnBottomReached="LoadMorePosts" StartIndex="0" Take="20" ParentClasses="columns-1 md:columns-2 gap-2 mt-5 space-y-2">
    <ListTemplate Context="post" >
        <PostBasic Post="post" />
    </ListTemplate>
    <EmptyTemplate>
        <p>No posts</p>       
    </EmptyTemplate>
</LazyList>