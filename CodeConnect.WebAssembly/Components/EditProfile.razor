@inherits EditProfileBase
@using Microsoft.AspNetCore.Components.Authorization
@using CodeConnect.WebAssembly.Components
<div class="top-0 left-0 absolute z-[300] w-[100vw] h-[100vh] backdrop-blur-md grid place-content-center">
    <div class="shadow-xl md:w-[500px] w-[90%]  mt-5 relative bg-dark-secondaryColor p-5 rounded-md">
        <button @onclick="Cancel" class="rounded-md border-4 border-solid border-light-secondaryColor px-3 py-2 text-light-supportColor dark:text-dark-supportColor/90 hover:bg-dark-secondaryColor" ><i class="fa-solid fa-angles-left"></i> Back</button>
        <h3 class="font-bold dark:text-dark-supportColor text-light-primaryColor text-4xl mt-4">Edit Profile</h3>
        <EditForm Model="EditProfileForm" FormName="editProfile" OnSubmit="ConfirmEditProfile" class="mt-5">
            <div>
                <label class="block font-bold dark:text-dark-supportColor/80 " for="firstName">FirstName</label>
                <InputText @bind-Value="EditProfileForm.FirstName" id="firstName" placeholder="FirstName"
                           class="w-[200px] text-xl bg-transparent border-b-4 text-light-supportColor dark:text-dark-supportColor border-light-supportColor dark:border-dark-supportColor rounded-md font-bold mb-2 pl-[5px] outline-none">
                </InputText>
            </div>
            <div class="mt-2">
                <label class="block font-bold dark:text-dark-supportColor/80 " for="lastName">FirstName</label>
                <InputText @bind-Value="EditProfileForm.LastName" id="lastName" placeholder="LastName"
                           class="w-[200px] text-xl bg-transparent border-b-4 text-light-supportColor dark:text-dark-supportColor border-light-supportColor dark:border-dark-supportColor rounded-md font-bold mb-2 pl-[5px] outline-none">
                </InputText>
            </div>
            <div class="mt-2">
                <label class="block font-bold dark:text-dark-supportColor/80 " for="DOB">DOB</label>
                <InputDate @bind-Value="EditProfileForm.DOB" id="DOB"
                           class="w-[200px] text-xl bg-transparent border-b-4 text-light-supportColor dark:text-dark-supportColor border-light-supportColor dark:border-dark-supportColor rounded-md font-bold mb-2 pl-[5px] outline-none">
                </InputDate>
            </div>
            <div class="mt-2">
                <label class="block font-bold dark:text-dark-supportColor/80 " for="githubLink">Github URL</label>
                <InputText @bind-Value="EditProfileForm.GithubLink" id="githubLink" placeholder="https://github.com/Kroplewski-M"
                           class="w-[200px] text-xl bg-transparent border-b-4 text-light-supportColor dark:text-dark-supportColor border-light-supportColor dark:border-dark-supportColor rounded-md font-bold mb-2 pl-[5px] outline-none">
                </InputText>
            </div>
            <div class="mt-2">
                <label class="block font-bold dark:text-dark-supportColor/80 " for="webLink">Website URL</label>
                <InputText @bind-Value="EditProfileForm.WebsiteLink" id="webLink" placeholder="https://www.mateusz-k.dev/"
                           class="w-[200px] text-xl bg-transparent border-b-4 text-light-supportColor dark:text-dark-supportColor border-light-supportColor dark:border-dark-supportColor rounded-md font-bold mb-2 pl-[5px] outline-none">
                </InputText>
            </div>
            <div class="mt-2">
                <label class="block font-bold dark:text-dark-supportColor/80 " for="DOB">Bio</label>
                <InputTextArea @bind-Value="EditProfileForm.Bio" id="Bio" placeholder="Describe yourself....."
                               class="w-[90%] h-[300px] text-xl bg-transparent border-2 text-light-supportColor dark:text-dark-supportColor border-light-supportColor dark:border-dark-supportColor rounded-md font-bold mb-2 pl-[5px] outline-none">
                </InputTextArea>
            </div>
            <button disabled="@DisableEdit" type="submit" class="rounded-md px-3 py-2 text-light-supportColor dark:text-dark-supportColor/90 bg-green-700 hover:bg-green-800" ><i class="fa-regular fa-floppy-disk"></i> Save Changes</button>
        </EditForm>
    </div>
</div>
